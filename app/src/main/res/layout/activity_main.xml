<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#6002EE">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PageTitle"
        android:text="@string/main"
        android:id="@+id/title"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:src="@drawable/imaginedragonsalbumn"
        android:padding="20dp"
        android:layout_below="@id/title"
        android:id="@+id/albumncover"
        android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/albumncover"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">

            <ImageView
                style="@style/Button"
                android:id="@+id/previous"
                android:src="@drawable/previoustrack" />

            <ImageView
                style="@style/Button"
                android:id="@+id/pause"
                android:src="@drawable/pause"/>

            <ImageView
                style="@style/Button"
                android:id="@+id/play"
                android:src="@drawable/playicon" />


            <ImageView
                style="@style/Button"
                android:id="@+id/next"
                android:src="@drawable/nexttrack" />

            <ImageView
                style="@style/Button"
                android:id="@+id/stop"
                android:src="@drawable/stopicon" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/player"
            style="@style/CategoryImage"
            android:src="@drawable/headphones" />

        <ImageView
            android:id="@+id/albums"
            style="@style/CategoryImage"
            android:src="@drawable/albumicon" />

        <ImageView
            android:id="@+id/songs"
            style="@style/CategoryImage"
            android:src="@drawable/songicon" />

        <ImageView
            android:id="@+id/playlists"
            style="@style/CategoryImage"
            android:src="@drawable/playlisticon"/>

    </LinearLayout>
</RelativeLayout>